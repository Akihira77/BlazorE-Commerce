@inject IProductRepository productRepository
@implements IDisposable

<div>
	<h2 class="text-center">
		Top Products of Today
	</h2>
</div>

@if(!productRepository.Products.Any())
{
	<span>@productRepository.Message</span>
} else
{
	<div class="container">
		@foreach(var product in productRepository.Products)
		{
			@if(product.Featured)
			{
				<div class="featured-product">
					<div>
						<a href="product/@product.Id">
							<img src="@product.ImageUrl"/>
						</a>
					</div>
					<h4>
						<a href="product/@product.Id">
							@product.Title
						</a>
					</h4>
					@if(!product.Variants.Any())
					{
						var price = product.Variants.ToList();
						<h5 class="price">
							$@price[0].Price
						</h5>
					}
				</div>
			}
		}
	</div>
}

@code {
	protected override void OnInitialized()
	{
		productRepository.ProductsChanged += StateHasChanged;
	}

	public void Dispose()
	{
		productRepository.ProductsChanged -= StateHasChanged;
	}
}
